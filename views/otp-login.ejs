<%- include('partials/header') %>

<style>
  .auth-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 80vh;
    background: #f9f9f9;
  }

  .auth-box {
    background: white;
    padding: 2rem 2.5rem;
    border-radius: 10px;
    box-shadow: 0 0 15px rgba(0,0,0,0.1);
    max-width: 400px;
    width: 100%;
    text-align: center;
  }

  .auth-box input {
    display: block;
    width: 100%;
    padding: 10px;
    margin-bottom: 1rem;
    border: 1px solid #ccc;
    border-radius: 5px;
  }

  .auth-box button {
    width: 100%;
    padding: 10px;
    background: #ff6b6b;
    color: white;
    border: none;
    border-radius: 5px;
    font-weight: bold;
    cursor: pointer;
  }

  .auth-box button:hover {
    background: #e04e4e;
  }

  .error {
    color: red;
    margin-bottom: 1rem;
  }
</style>

<div class="auth-container">
  <div class="auth-box">
    <h2>OTP Login</h2>
    <% if (error) { %>
      <div class="error"><%= error %></div>
    <% } %>
    <form action="/auth/send-otp" method="POST">
      <input type="tel" name="mobile" placeholder="Enter your mobile number" required>
      <button type="submit">Send OTP</button>
    </form>
    <a href="/auth/login">Login with Email</a>
  </div>
</div>

<%- include('partials/footer') %>
